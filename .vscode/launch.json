  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Games",
      "remoteRoot": "\\home\\um",
      "localRoot": "/workspaces/Ultimafia",
      "port": 9231,
      "address": "localhost",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: WWW",
      "remoteRoot": "\\home\\um",
      "localRoot": "/workspaces/Ultimafia",
      "port": 9230,
      "address": "localhost"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Chat",
      "remoteRoot": "\\home\\um",
      "localRoot": "/workspaces/Ultimafia",
      "port": 9232,
      "address": "localhost"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "frontend",
      "url": "http://127.0.0.1",
      "webRoot": "${workspaceFolder}/react_main"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "game",
      "skipFiles": ["<node_internals>/**"],
      "enableContentValidation": false,
      "program": "${workspaceFolder}/Games/games.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "www",
      "skipFiles": ["<node_internals>/**"],
      "enableContentValidation": false,
      "program": "${workspaceFolder}/bin/www"
    },
    {
      "args": ["--timeout", "12000", "--recursive", "${workspaceFolder}/test"],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
